@model Proyecto_1.Models.proveedores

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Crear Proveedor</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

