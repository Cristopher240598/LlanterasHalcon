@model IEnumerable<Proyecto_1.Models.usuarios>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Empleados</h2>

<p style="margin-top:20px; margin-bottom:40px;">
    @Html.ActionLink("Crear empleado", "Create", new { id = "" }, new { @class = "link-item" })
</p>
<div class="table-responsive" style="width:1000px;">
    <table class="table" overflow-y="auto">
        <tr>
            <th>
                Apellido paterno
            </th>
            <th>
                Apellido materno
            </th>
            <th>
                Nombre
            </th>
            <th>
                Teléfono
            </th>
            <th>
                Correo electrónico
            </th>
            <th>
                Puesto
            </th>
            <th>
                Acciones
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.apellidoPaterno)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.apellidoMaterno)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.telefono)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.correoElectronico)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.roles.nombre)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "link-item" }) |
                    @Html.ActionLink("Detalles", "Details", new { id = item.Id }, new { @class = "link-item" }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "link-item" })
                </td>
            </tr>
        }

    </table>
</div>
