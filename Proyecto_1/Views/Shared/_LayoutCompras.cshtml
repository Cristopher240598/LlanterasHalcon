<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <title>LlanterasHalcón</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Content/estilos/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/estilos/styles.min.css">
    <link rel="stylesheet" href="~/Content/estilos/fonts/fontawesome-all.min.css">
    <link rel="stylesheet" href="~/Content/estilos/fonts/font-awesome.min.css">
    <link rel="stylesheet" href="~/Content/estilos/fonts/fontawesome5-overrides.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat:400,700">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Kaushan+Script">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Droid+Serif:400,700,400italic,700italic">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700">
    <link rel="icon" type="image/png" sizes="512x512" href="~/Content/img/LogoIcono.png">
</head>
<body id="page-top">
    <nav class="navbar navbar-light navbar-expand-lg fixed-top bg-light" id="mainNav">
        <div class="container">
            <img class="imagen-logo" src="~/Content/img/Logo.png" />
            @Html.ActionLink("Llanteras Halcón", "Index", "Home", new { area = "" }, new { @class = "navbar-brand nombre-empresa tipo-letra" })
            <button data-toggle="collapse" data-target="#navbarResponsive" class="navbar-toggler navbar-toggler-right" type="button" data-toogle="collapse" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <i class="fa fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="nav navbar-nav ml-auto text-uppercase">
                    @Html.Partial("_LoginPartial1")
                </ul>
            </div>
        </div>
    </nav>
    <div class="d-flex justify-content-center principal">
        <div class="bg-light div1-admin">
            <div id="accordionAdmin" class="accordion .opcs-admin">
                <div class="card borde-opcs-admin">
                    <div id="headingOne">
                        <a class="btn btn-link btn-block text-left opc-admin" role="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">Compras</a>
                    </div>
                    <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordionAdmin">
                        <div class="card-body items-opcs">
                            <div>
                                @Html.ActionLink("Agregar", "Create", "detallesCompras", new { id = "add" }, new { @class = "link-item" })
                            </div>
                            <div class="item-opc">
                                @Html.ActionLink("Ver todas", "Index", "detallesCompras", new { id = "list" }, new { @class = "link-item" })
                            </div>
                        </div>
                    </div>
                    <div id="headingTwo">
                        <a class="btn btn-link btn-block text-left opc-admin" role="button" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">Categorías</a>
                    </div>
                    <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionAdmin">
                        <div class="card-body items-opcs">
                            <div>
                                @Html.ActionLink("Agregar", "Create", "categorias", new { id = "add" }, new { @class = "link-item" })
                            </div>
                            <div class="item-opc">
                                @Html.ActionLink("Ver todas", "Index", "categorias", new { id = "list" }, new { @class = "link-item" })
                            </div>
                        </div>
                    </div>
                    <div id="headingThree">
                        <a class="btn btn-link btn-block text-left opc-admin" role="button" data-toggle="collapse" data-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">Subcategorías</a>
                    </div>
                    <div id="collapseThree" class="collapse" aria-labelledby="headingThree" data-parent="#accordionAdmin">
                        <div class="card-body items-opcs">
                            <div>
                                @Html.ActionLink("Agregar", "Create", "subcategorias", new { id = "add" }, new { @class = "link-item" })
                            </div>
                            <div class="item-opc">
                                @Html.ActionLink("Ver todas", "Index", "subcategorias", new { id = "list" }, new { @class = "link-item" })
                            </div>
                        </div>
                    </div>
                    <div id="headingFour">
                        <a class="btn btn-link btn-block text-left opc-admin" role="button" data-toggle="collapse" data-target="#collapseFour" aria-expanded="false" aria-controls="collapseFour">Llantas</a>
                    </div>
                    <div id="collapseFour" class="collapse" aria-labelledby="headingFour" data-parent="#accordionAdmin">
                        <div class="card-body items-opcs">
                            <div>
                                @Html.ActionLink("Agregar", "Create", "llantas", new { id = "add" }, new { @class = "link-item" })
                            </div>
                            <div class="item-opc">
                                @Html.ActionLink("Ver todas", "Index", "llantas", new { id = "list" }, new { @class = "link-item" })
                            </div>
                        </div>
                    </div>
                    <div id="headingFive">
                        <a class="btn btn-link btn-block text-left opc-admin" role="button" data-toggle="collapse" data-target="#collapseFive" aria-expanded="false" aria-controls="collapseFive">Envíos</a>
                    </div>
                    <div id="collapseFive" class="collapse" aria-labelledby="headingFive" data-parent="#accordionAdmin">
                        <div class="card-body items-opcs">
                            <div>
                                @Html.ActionLink("Agregar", "Create", "envios", new { id = "add" }, new { @class = "link-item" })
                            </div>
                            <div class="item-opc">
                                @Html.ActionLink("Ver todas", "Index", "envios", new { id = "list" }, new { @class = "link-item" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-center div2-admin">
            <section>
                <div class="container">

                    <div class="row">
                        <div class="col-lg-12 text-center">
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
    <footer style="text-shadow: 0px 0px;">
        <div class="container">
            <span class="copyright">Copyright&nbsp;© Llanteras Halcón @DateTime.Now.Year</span>
        </div>
    </footer>
    <script src="~/Scripts/estilos/jquery.min.js"></script>
    <script src="~/Scripts/estilos/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.min.js"></script>
    <script src="~/Scripts/estilos/script.min.js"></script>
</body>
</html>
