@model IEnumerable<Proyecto_1.Models.llantas>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutCompras.cshtml";
}

<h2>Llantas</h2>

<p style="margin-top:20px; margin-bottom:40px;">
    @Html.ActionLink("Crear llanta", "Create", new { id = "" }, new { @class = "link-item" })
</p>
<div class="table-responsive" style="width:1000px;">
    <table class="table" overflow-y="auto">
        <tr>
            <th>
                Modelo
            </th>
            <th>
                Rin
            </th>
            <th>
                Ancho
            </th>
            <th>
                Stock
            </th>
            <th>
                Existencia
            </th>
            <th>
                Precio de venta
            </th>
            <th>
                Marca
            </th>
            <th>
                Subcategoría
            </th>
            <th>
                Acciones
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.modelo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.rin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ancho)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.stock)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.existencia)
                </td>
                <td>
                    $ @Html.DisplayFor(modelItem => item.precioVenta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.marcas.nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.subcategorias.nombre)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "link-item" }) |
                    @Html.ActionLink("Detalles", "Details", new { id = item.Id }, new { @class = "link-item" }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "link-item" })
                </td>
            </tr>
        }

    </table>
</div>